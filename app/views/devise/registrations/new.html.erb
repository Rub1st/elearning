<body class="text-center enter-field">

<main class="enter-position">
  <form>
    <h1 class="h3 mb-3 fw-normal"><%= t("Sign up") %></h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>

    <%= f.text_field :login, autofocus: true, autocomplete: "login", class: "form-control", placeholder: "Login"%>

    <%= f.text_field :full_name, autofocus: true, autocomplete: "full_name", class: "form-control", placeholder: "Full name" %>

    <%
=begin%>
 <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> <%=t('characters minimum')%>)</em>
    <% end %><br />
<%
=end%>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password" %>

    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Password confirmation" %>

    <button class="w-100 btn btn-lg btn-primary" type="submit"><%= t("Sign up") %></button>
    <p class="mt-5 mb-3 text-muted">&copy; 2020</p>

      <%= render "devise/shared/links" %>
  </form>
</main>
</body>
<% end %>
